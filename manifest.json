{
    "manifest_version": 3,
    "name": "Smart Notes Saver",
    "version": "1.0",
    "description": "Save important text snippets from webpages.",
    "permissions": ["storage", "scripting", "activeTab", "identity"],
    "host_permissions": ["http://*/*", "https://*/*","https://generativelanguage.googleapis.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
}
  